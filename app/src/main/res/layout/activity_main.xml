<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="64dp">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary_dark"
            app:titleTextColor="@color/white"
            android:visibility="visible"
            app:title="Climate control"
            app:popupTheme="@style/Base.Theme.Ekranas"
            tools:visibility="visible">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="@color/numbrid"
        android:backgroundTint="@color/taust"
        app:layout_anchor="@+id/constraintLayout"
        app:layout_anchorGravity="center"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horiz_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.60" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horiz_85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_recycle_serv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />


        <ImageView
            android:id="@+id/imageViewFloorPlan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/taust"
            android:src="@drawable/korteriplaan2"

            app:layout_constraintTop_toTopOf="@+id/pilt_up_serv"

            app:layout_constraintBottom_toTopOf="@+id/pilt_down_serv"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textCapWords"
            android:overScrollMode="always"
            android:scrollbarStyle="outsideOverlay"
            android:visibility="visible"
            app:fastScrollEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="@id/guideline_horiz_60"

            app:layout_constraintBottom_toTopOf="@id/guideline_horiz_85"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"


            />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horiz_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.20" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horiz_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.40" />

        <TextView
            android:id="@+id/textViewTemp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="loading.."
            android:textAppearance="@style/Base.Theme.Ekranas"
            android:textColor="@color/numbrid"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/guideline_horiz_20"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical_20"

            />

        <TextView
            android:id="@+id/textViewTemp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="loading..."
            android:textAppearance="@style/Base.Theme.Ekranas"
            android:textColor="@color/numbrid"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@id/guideline_horiz_20"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical_80"

            />

        <TextView
            android:id="@+id/textViewTemp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Loading."
            android:textAppearance="@style/Base.Theme.Ekranas"
            android:textColor="@color/numbrid"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@id/guideline_horiz_40"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical_20" />

        <TextView
            android:id="@+id/textViewTemp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="loading.."
            android:textAppearance="@style/Base.Theme.Ekranas"
            android:textColor="@color/numbrid"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@id/guideline_horiz_40"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical_80" />


        <TextView
            android:id="@+id/textViewkyte7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESP8266 Sensor 4"
            android:textColor="@color/kyte"

            app:layout_constraintBottom_toTopOf="@+id/textViewkyte8"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewkyte8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESP8266 Sensor 4"
            android:textColor="@color/kyte"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline_nupud_Top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_nupud_Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_all_serv_Bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.99" />


        <ImageButton
            android:id="@+id/imageButtonnuppA"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:src="@drawable/kyteoff"

            app:layout_constraintBottom_toBottomOf="@+id/guideline_all_serv_Bottom"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_nupud_Top"

            />

        <ImageButton
            android:id="@+id/imageButtonnuppB"
            android:layout_width="70dp"
            android:layout_height="0dp"

            android:src="@drawable/kyteoff"

            app:layout_constraintBottom_toBottomOf="@+id/guideline_all_serv_Bottom"

            app:layout_constraintStart_toEndOf="@+id/imageButtonnuppA"
            app:layout_constraintTop_toTopOf="@+id/guideline_nupud_Top"

            />

        <ImageButton
            android:id="@+id/imageButtonnuppC"
            android:layout_width="70dp"
            android:layout_height="0dp"

            android:src="@drawable/kyteoff"

            app:layout_constraintBottom_toBottomOf="@+id/guideline_all_serv_Bottom"

            app:layout_constraintStart_toEndOf="@+id/imageButtonnuppB"
            app:layout_constraintTop_toTopOf="@+id/guideline_nupud_Top"

            />
        <ImageButton
            android:id="@+id/imageButtonnuppD"
            android:layout_width="70dp"
            android:layout_height="0dp"

            android:src="@drawable/kyteoff"

            app:layout_constraintBottom_toBottomOf="@+id/guideline_all_serv_Bottom"

            app:layout_constraintStart_toEndOf="@+id/imageButtonnuppC"
            app:layout_constraintTop_toTopOf="@+id/guideline_nupud_Top"

            />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/pilt_up_serv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/pilt_down_serv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.60" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>