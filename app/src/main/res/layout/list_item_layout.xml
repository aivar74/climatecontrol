<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/white"
    android:elevation="8dp"
    android:padding="4dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">


        <TextView
            android:id="@+id/textView_IP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"

            android:text="82.131.3.41"
            android:paddingEnd="2dp"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>


        <TextView
            android:id="@+id/textView_Port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"

            android:text=":8099"
            android:paddingEnd="2dp"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/textView_IN1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"

            android:text="IN1=ON"
            android:paddingEnd="2dp"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>


        <TextView
            android:id="@+id/textView_IN2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"

            android:text="IN2=ON"
            android:paddingEnd="2dp"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/textView_OUT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"

            android:text="OUT1=OFF"
            android:paddingEnd="2dp"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/textView_OUT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"

            android:text="OUT2=OFF"
            android:paddingEnd="2dp"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>




    </LinearLayout>

</androidx.cardview.widget.CardView>
